  font-size: var(--font-size-sm);
}

.settings-subsection-body {
  padding: var(--spacing-5);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-4);
}

.settings-form-grid {
  display: grid;
  gap: var(--spacing-4);
}

.settings-inline-actions {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-3);
}

.settings-note {
  padding: var(--spacing-3);
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
  line-height: 1.6;
}

.settings-note.info {
  background: #eff6ff;
  border: 1px solid #bfdbfe;
  color: #1e40af;
}

.settings-note.warn {
  background: #fef3c7;
  border: 1px solid #f59e0b;
  color: #92400e;
}

.settings-note.danger {
  background: #fef2f2;
  border: 1px solid #fca5a5;
  color: #991b1b;
}

.settings-note a {
  color: inherit;
  text-decoration: underline;
}

.settings-note ul {
  margin: var(--spacing-2) 0 0;
  padding-left: 1.25rem;
}

.settings-note li {
  margin-bottom: 0.25rem;
}

.settings-provider-card {
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: var(--spacing-5);
  background: #fff;
}

.settings-provider-header {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: var(--spacing-4);
  align-items: center;
}

.settings-provider-meta {
  flex: 1;
  min-width: 220px;
}

.settings-provider-title {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  margin-bottom: var(--spacing-1);
}

.settings-provider-title h3 {
  margin: 0;
  font-size: var(--font-size-lg);
}

.settings-provider-status {
  padding: 0.2rem 0.6rem;
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
  font-weight: 600;
}

.settings-provider-status.enabled {
  background: #dcfce7;
  color: #166534;
}

.settings-provider-status.disabled {
  background: var(--color-neutral-100);
  color: #991b1b;
}

.settings-provider-description {
  margin: 0;
  color: var(--text-muted);
  font-size: var(--font-size-sm);
}

.settings-provider-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  flex-wrap: wrap;
}

.settings-provider-toggle {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  cursor: pointer;
  user-select: none;
}

.settings-provider-toggle.is-disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.settings-provider-toggle-text {
  min-width: 3rem;
}

.settings-switch-input {
  width: 3rem;
  height: 1.5rem;
  appearance: none;
  background-color: #d1d5db;
  border-radius: 999px;
  position: relative;
  border: none;
  outline: none;
  cursor: pointer;
  transition: background-color 0.2s;
}

.settings-switch-input:checked {
  background-color: #10b981;
}

.settings-switch-input::after {
  content: '';
  position: absolute;
  top: 2px;
  left: 2px;
  width: 1.25rem;
  height: 1.25rem;
  background: #fff;
  border-radius: 999px;
  transition: transform 0.2s;
}

.settings-switch-input:checked::after {
  transform: translateX(1.5rem);
}

.settings-switch-input:disabled {
  cursor: not-allowed;
  opacity: 0.6;
}

.settings-provider-form {
  display: grid;
  gap: var(--spacing-3);
  margin-top: var(--spacing-4);
}

.settings-provider-fields {
  display: grid;
  gap: var(--spacing-3);
  padding: var(--spacing-4);
  border-radius: var(--radius-md);
  border: 1px solid var(--border);
  background: #f8fafc;
}

.settings-field-label {
  display: block;
  margin-bottom: var(--spacing-2);
  font-size: clamp(0.82rem, 1.05vw, 0.9rem);
  font-weight: 600;
  color: var(--text-primary);
}

.settings-input {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border);
  border-radius: var(--radius-sm);
  font-size: clamp(0.85rem, 1.1vw, 0.95rem);
  background: #fff;
}

.settings-textarea {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border);
  border-radius: var(--radius-sm);
  font-size: clamp(0.85rem, 1.1vw, 0.95rem);
  background: #fff;
  resize: vertical;
}

.settings-checkbox-row {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  font-size: clamp(0.82rem, 1.05vw, 0.9rem);
  color: var(--text-primary);
}

.settings-input.mono {
  font-family: 'SFMono-Regular', Menlo, Monaco, Consolas, monospace;
}

.settings-provider-footer {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  flex-wrap: wrap;
}

.settings-provider-updated {
  font-size: var(--font-size-xs);
  color: var(--text-muted);
  font-style: italic;
  margin-top: var(--spacing-2);
}

.settings-back-link {
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  text-decoration: none;
  border: 1px solid var(--border);
  border-radius: 999px;
  padding: 0.3rem 0.7rem;
  background: var(--surface-card);
  margin-bottom: var(--spacing-2);
  transition: all 0.18s var(--ease-out);
}

.settings-back-link::before {
  content: '‚Üê';
  font-size: 0.9em;
  line-height: 1;
}

.settings-back-link:hover {
  color: var(--text-primary);
  border-color: var(--border-hover);
  background: var(--surface-hover);
  box-shadow: var(--shadow-sm);
  transform: translateY(-1px);
}

.settings-slack-banner {
  padding: var(--spacing-5);
  border-radius: var(--radius-lg);
  border: 1px solid transparent;
  text-align: center;
  display: grid;
  gap: var(--spacing-3);
}

.settings-slack-banner.error {
  background: #fef2f2;
  border-color: #fecaca;
  color: #7f1d1d;
}

.settings-slack-banner.info {
  background: #eff6ff;
  border-color: #bfdbfe;
  color: #1e3a8a;
}

.settings-slack-icon {
  width: 48px;
  height: 48px;
  border-radius: 999px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  background: var(--color-neutral-100);
  color: #991b1b;
}

.settings-slack-icon.info {
  background: #3b82f6;
  color: #fff;
}

.settings-slack-icon.success {
  background: #d1fae5;
  color: #10b981;
}

.settings-slack-card {
  background: #fff;
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  padding: var(--spacing-5);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-4);
}

/* ============================================
   STATUS PAGE SETTINGS
   ============================================ */

.status-page-config {
  background: linear-gradient(180deg, #f8fafc 0%, #eef2f7 100%);
}

.status-page-config-header {
  padding: clamp(0.85rem, 1.6vw, 1.35rem) clamp(1.25rem, 2.3vw, 2.2rem);
  border-bottom: 1px solid rgba(148, 163, 184, 0.28);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--spacing-4);
  background: #ffffff;
  position: relative;
  z-index: 2;
}

.status-page-config-header::after {
  content: '';
  position: absolute;
  inset: auto 0 0 0;
  height: 1px;
  background: linear-gradient(90deg, rgba(148, 163, 184, 0.06), rgba(59, 130, 246, 0.2), rgba(148, 163, 184, 0.06));
}

.status-page-config-header-main {
  display: flex;
  flex-direction: column;
  gap: 0.2rem;
}

.status-page-config-back {
  align-self: flex-start;
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
  padding: 0.3rem 0.7rem;
  border-radius: 999px;
  border: 1px solid rgba(148, 163, 184, 0.4);
  background: rgba(248, 250, 252, 0.8);
  color: var(--text-secondary);
  font-size: clamp(0.72rem, 1vw, 0.85rem);
  font-weight: 600;
  cursor: pointer;
  transition: all 0.18s var(--ease-out);
}

.status-page-config-back:hover {
  color: var(--text-primary);
  border-color: rgba(100, 116, 139, 0.6);
  box-shadow: 0 6px 14px rgba(15, 23, 42, 0.08);
  transform: translateY(-1px);
}

.status-page-config-back:focus-visible {
  outline: 2px solid var(--border-focus);
  outline-offset: 2px;
}

.status-page-config-title {
  font-size: clamp(1.5rem, 2.3vw, 2.2rem);
  font-weight: 700;
  letter-spacing: -0.02em;
  margin: 0;
}

.status-page-config-subtitle {
  font-size: clamp(0.88rem, 1.2vw, 1rem);
  color: var(--text-secondary);
  margin: 0;
  line-height: 1.55;
}

.status-page-config-header-actions {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
}

.status-page-config-preview-toggle {
  box-shadow: none;
  border-color: #dc2626;
  background: #dc2626;
  color: #ffffff;
}

.status-page-config-preview-toggle:hover {
  border-color: #b91c1c;
  background: #b91c1c;
  color: #ffffff;
}

.status-page-config-tabs {
  border-bottom: 1px solid rgba(148, 163, 184, 0.25);
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  padding: 0.75rem clamp(1rem, 2vw, 1.5rem);
  display: flex;
  gap: var(--spacing-3);
  flex-shrink: 0;
  align-items: flex-start;
  justify-content: space-between;
  box-shadow: 0 2px 8px rgba(15, 23, 42, 0.04);
  /* Removed overflow hidden/max-width restrictions as wrapping handles it */
}

.status-page-config-tabs-list {
  display: flex;
  gap: 0.5rem;
  row-gap: 0.75rem;
  flex-wrap: wrap;
  flex: 1 1 auto;
  min-width: 0;
  padding: 0.25rem 0;
}

.status-page-config-tabs-actions {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.status-page-config-tab {
  appearance: none;
  background: #ffffff;
  border: 1px solid rgba(148, 163, 184, 0.35);
  padding: 0.4rem 0.65rem;
  border-radius: 6px;
  color: var(--text-secondary);
  font-weight: 600;
  font-size: 0.78rem;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
  transition: all 0.18s var(--ease-out);
  white-space: nowrap;
  text-decoration: none;
  position: relative;
  box-shadow: 0 1px 2px rgba(15, 23, 42, 0.04);
  flex-shrink: 0;
}

.status-page-config-tab::after {
  content: none;
}

.status-page-config-tab:hover {
  color: var(--text-primary);
  background: #f8fafc;
  border-color: rgba(100, 116, 139, 0.45);
  box-shadow: 0 2px 6px rgba(15, 23, 42, 0.08);
}

.status-page-config-tab:focus-visible {
  outline: 2px solid var(--border-focus);
  outline-offset: 2px;
}

.status-page-config-tab.is-active {
  color: #ffffff;
  background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
  border-color: #b91c1c;
  box-shadow: 0 4px 12px rgba(220, 38, 38, 0.25);
}


.status-page-config-tab-badge {
  padding: 0.1rem 0.45rem;
  border-radius: 999px;
  font-size: clamp(0.62rem, 0.85vw, 0.72rem);
  font-weight: 700;
  background: #e2e8f0;
  color: var(--text-muted);
}

.status-page-config-tab-badge.is-active {
  background: var(--primary);
  color: #ffffff;
}

.status-page-config-tab-icon {
  font-size: 0.95rem;
  line-height: 1;
  opacity: 0.75;
  transition: transform 0.2s ease, opacity 0.2s ease;
}

.status-page-config-tab:hover .status-page-config-tab-icon {
  transform: scale(1.15);
  opacity: 0.95;
}

.status-page-config-tab.is-active .status-page-config-tab-icon {
  opacity: 1;
  transform: scale(1.05);
}

.status-page-config-sticky-bar {
  box-shadow: 0 -4px 12px rgba(15, 23, 42, 0.08);
  flex-shrink: 0;
}

.status-page-config-body {
  gap: 0;
  min-width: 0;
  container-type: inline-size;
}

.status-page-config-settings {
  min-width: 0;
  background: linear-gradient(180deg, rgba(248, 250, 252, 0.9) 0%, rgba(239, 242, 247, 0.9) 100%);
}

.status-page-config-settings-inner {
  width: 100%;
}

.status-page-config-settings h2 {
  font-size: clamp(1.1rem, 1.8vw, 1.4rem);
  font-weight: 700;
  margin: 0 0 var(--spacing-3) 0;
}

.status-page-config-card {
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.96) 0%, rgba(248, 250, 252, 0.98) 100%);
  border: 1px solid rgba(148, 163, 184, 0.22);
  box-shadow: 0 14px 30px rgba(15, 23, 42, 0.06);
}

.status-page-config-card .ui-card-body {
  padding: clamp(1.1rem, 2vw, 1.5rem);
}

.status-page-config-card-title {
  font-size: clamp(1.1rem, 1.8vw, 1.35rem);
  font-weight: 700;
  margin: 0 0 0.35rem 0;
}

.status-page-config-card-desc {
  color: var(--text-secondary);
  font-size: clamp(0.85rem, 1.1vw, 0.95rem);
  margin: 0 0 var(--spacing-4) 0;
  line-height: 1.6;
}

.status-page-config-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
}

.status-page-config-actions {
  box-shadow: 0 -6px 16px rgba(15, 23, 42, 0.06);
}

.status-page-config-preview {
  background: linear-gradient(180deg, #f8fafc 0%, #eef2f7 100%);
  position: relative;
  min-width: 0;
  border-left: 1px solid rgba(148, 163, 184, 0.25);
}

.status-page-config-preview::before {
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 1px;
  background: linear-gradient(180deg, rgba(148, 163, 184, 0.12) 0%, rgba(148, 163, 184, 0.35) 50%, rgba(148, 163, 184, 0.12) 100%);
  pointer-events: none;
}

.status-page-preview-body {
  position: sticky;
  top: 0;
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: clamp(0.9rem, 1.4vw, 1.4rem);
  gap: var(--spacing-3);
  min-height: 0;
}

.status-page-preview-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.65rem 0.9rem;
  border: 1px solid rgba(148, 163, 184, 0.35);
  border-radius: var(--radius-lg);
  background: rgba(255, 255, 255, 0.9);
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: 0.02em;
  text-transform: uppercase;
  font-size: 0.7rem;
}

.status-page-preview-chip {
  padding: 0.2rem 0.55rem;
  border-radius: 999px;
  background: rgba(14, 116, 144, 0.12);
  color: #0e7490;
  font-size: 0.65rem;
  font-weight: 700;
}

.status-page-preview-frame {
  flex: 1;
  border-radius: calc(var(--radius-xl) + 2px);
  border: 1px solid rgba(148, 163, 184, 0.35);
  background: #ffffff;
  box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
  overflow: hidden;
  transition: box-shadow 0.2s var(--ease-out), transform 0.2s var(--ease-out);
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.status-page-preview-frame:hover {
  box-shadow: 0 24px 50px rgba(15, 23, 42, 0.1);
  transform: translateY(-2px);
}

.status-page-preview-controls {
  border-radius: var(--radius-lg);
  border: 1px solid rgba(148, 163, 184, 0.35);
  box-shadow: 0 10px 22px rgba(15, 23, 42, 0.08);
  padding: var(--status-preview-controls-padding, 0.75rem 0.95rem);
}

.status-page-preview-device-toggle {
  background: rgba(226, 232, 240, 0.9);
}

.status-page-preview-device-btn {
  font-size: var(--status-preview-device-font, clamp(0.72rem, 1vw, 0.85rem));
  padding: var(--status-preview-device-padding, clamp(0.35rem, 0.9vw, 0.55rem) clamp(0.6rem, 1vw, 0.9rem));
}

.status-page-preview-device-btn.is-active {
  box-shadow: 0 8px 18px rgba(15, 23, 42, 0.12);
}

.status-page-preview-device-btn:focus-visible {
  outline: 2px solid var(--border-focus);
  outline-offset: 2px;
}

.status-page-preview-zoom-controls {
  background: #f8fafc;
}

.status-page-preview-zoom-controls button {
  font-size: var(--status-preview-zoom-font, clamp(0.7rem, 0.9vw, 0.85rem));
  padding: var(--status-preview-zoom-button-padding, clamp(0.2rem, 0.6vw, 0.4rem) clamp(0.35rem, 0.7vw, 0.55rem));
}

.status-page-preview-canvas {
  min-width: 0;
  min-height: 0;
}

.status-page-preview-device-frame {
  max-width: 100%;
}

@media (max-width: 1440px) {
  .status-page-config {
    --status-preview-padding: clamp(0.65rem, 1.2vw, 1rem);
  }

  .status-page-config-header {
    padding: clamp(0.9rem, 1.6vw, 1.35rem) clamp(1rem, 2vw, 1.6rem);
  }

  .status-page-config-tabs {
    padding: 0 clamp(1rem, 2vw, 1.6rem);
    gap: var(--spacing-2);
  }

  .status-page-config-tab {
    padding: 0.5rem 0.75rem 0.6rem;
  }
}

@media (max-width: 1366px) {
  .status-page-config {
    --spacing-6: 1.25rem;
    --spacing-5: 1rem;
    --spacing-4: 0.85rem;
    --spacing-3: 0.65rem;
    --spacing-2: 0.45rem;
    --status-preview-padding: clamp(0.55rem, 1.1vw, 0.9rem);
    --status-preview-controls-padding: clamp(0.5rem, 1vw, 0.7rem) clamp(0.65rem, 1.2vw, 0.85rem);
    --status-preview-device-padding: clamp(0.3rem, 0.8vw, 0.5rem) clamp(0.55rem, 0.9vw, 0.8rem);
    --status-preview-device-font: clamp(0.7rem, 1vw, 0.82rem);
    --status-preview-zoom-font: clamp(0.68rem, 0.9vw, 0.8rem);
    --status-preview-zoom-button-padding: clamp(0.18rem, 0.5vw, 0.35rem) clamp(0.3rem, 0.6vw, 0.5rem);
  }

  .status-page-config-header {
    padding: clamp(0.75rem, 1.3vw, 1.1rem) clamp(0.9rem, 1.7vw, 1.3rem);
  }

  .status-page-config-tabs {
    padding: 0.4rem clamp(0.85rem, 1.6vw, 1.2rem);
    gap: var(--spacing-2);
  }

  .status-page-config-settings {
    padding: var(--spacing-5);
  }

  .status-page-preview-body {
    padding: clamp(0.7rem, 1.1vw, 1rem);
  }
}

@container (max-width: 760px) {
  .status-page-config-tabs {
    flex-wrap: wrap;
    row-gap: 0.4rem;
  }
}

@container (max-width: 1100px) {
  .status-page-config-body {
    flex-direction: column;
    overflow: visible;
  }

  .status-page-config-settings {
    border-right: none;
    border-bottom: 1px solid rgba(148, 163, 184, 0.2);
  }

  .status-page-config-preview {
    border-left: none;
  }

  .status-page-config-preview::before {
    display: none;
  }

  .status-page-preview-body {
    position: static;
    height: auto;
  }
}

@media (max-width: 1200px) {
  .status-page-config {
    height: auto !important;
    overflow: visible !important;
  }

  .status-page-config-body {
    flex-direction: column;
    overflow: visible !important;
  }

  .status-page-config-settings {
    border-right: none;
    border-bottom: 1px solid rgba(148, 163, 184, 0.2);
  }

  .status-page-config-preview {
    border-left: none;
  }

  .status-page-config-preview::before {
    display: none;
  }

  .status-page-preview-body {
    position: static;
    height: auto;
  }
}

@media (max-width: 900px) {
  .status-page-config-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .status-page-config-tabs {
    padding-left: 1rem;
    padding-right: 1rem;
  }
}

.settings-slack-status {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
}

.settings-slack-logo {
  width: 48px;
  height: 48px;
  border-radius: var(--radius-md);
  background: #4a154b;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.settings-slack-meta {
  flex: 1;
  min-width: 200px;
}

.settings-slack-meta h3 {
  margin: 0;
  font-size: var(--font-size-lg);
}

.settings-slack-meta p {
  margin-top: var(--spacing-1);
  color: var(--text-muted);
  font-size: var(--font-size-sm);
}

.settings-slack-pill {
  padding: 0.2rem 0.7rem;
  border-radius: var(--radius-full);
  font-size: var(--font-size-xs);
  font-weight: 600;
}

.settings-slack-pill.active {
  background: #dcfce7;
  color: #166534;
}

