# Database Configuration
DATABASE_URL=postgresql://opsguard:your_secure_password@localhost:5432/opsguard_db?sslmode=prefer

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-generate-with-openssl-rand-base64-32

# Application URL (REQUIRED IN PRODUCTION)
# Used in notifications, webhooks, RSS feeds, and user invitations
# MUST be set in production to avoid localhost URLs in notifications
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Configuration
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Security
NEXT_TELEMETRY_DISABLED=1

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
API_RATE_LIMIT_MAX=300
API_RATE_LIMIT_WINDOW_MS=60000

# PostgreSQL Configuration (for docker-compose)
POSTGRES_USER=opsguard
POSTGRES_PASSWORD=your_secure_password_change_me
POSTGRES_DB=opsguard_db
POSTGRES_PORT=5432

# Application Port (for docker-compose)
APP_PORT=3000

# Optional: Email Configuration
# RESEND_API_KEY=your_resend_api_key
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_user
# SMTP_PASSWORD=your_smtp_password

# Optional: SMS Configuration
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Optional: Push Notification Configuration
# FIREBASE_PROJECT_ID=your_firebase_project_id
# FIREBASE_PRIVATE_KEY=your_firebase_private_key

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=info

